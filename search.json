---
layout: null
---
[
{% assign first_item = true %}
{% for page in site.pages %}
  {% unless page.url contains '.xml' or page.url contains 'assets' or page.url contains 'category' or page.url contains 'tag' or page.url == '/about-me' or page.url == '/' or page.url == '/categories' %}
    {% unless first_item %},{% endunless %}
    {
      "title": {{ page.title | jsonify }},
      "url": {{ page.url | jsonify }},
      "content": {{ page.content | strip_html | strip_newlines | jsonify }},
      "excerpt": {{ page.excerpt | strip_html | strip_newlines | jsonify }},
      "tags": {{ page.tags | jsonify }},
      "categories": {{ page.categories | jsonify }},
      "date": {{ page.date | date: '%Y-%m-%d' | jsonify }}
    }
    {% assign first_item = false %}
  {% endunless %}
{% endfor %}
{% for post in site.posts %}
  {% unless first_item %},{% endunless %}
  {
    "title": {{ post.title | jsonify }},
    "url": {{ post.url | jsonify }},
    "content": {{ post.content | strip_html | strip_newlines | jsonify }},
    "excerpt": {{ post.excerpt | strip_html | strip_newlines | jsonify }},
    "tags": {{ post.tags | jsonify }},
    "categories": {{ post.categories | jsonify }},
    "date": {{ post.date | date: '%Y-%m-%d' | jsonify }}
  }
  {% assign first_item = false %}
{% endfor %}
] 