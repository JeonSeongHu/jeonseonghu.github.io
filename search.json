---
layout: null
---
[
{% assign first_item = true %}
{% for page in site.pages %}
  {% unless page.url contains '.xml' or page.url contains 'assets' or page.url contains 'category' or page.url contains 'tag' or page.url == '/about-me' or page.url == '/' or page.url == '/categories' %}
    {% unless first_item %},{% endunless %}
    {
      "title": "{{ page.title | escape }}",
      "url": "{{ page.url }}",
      "content": "{{ page.content | strip_html | strip_newlines | escape }}",
      "excerpt": "{{ page.excerpt | strip_html | strip_newlines | escape }}",
      "tags": [{% for tag in page.tags %}"{{ tag | escape }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
      "categories": [{% for category in page.categories %}"{{ category | escape }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
      "date": "{{ page.date | date: '%Y-%m-%d' }}"
    }
    {% assign first_item = false %}
  {% endunless %}
{% endfor %}
{% for post in site.posts %}
  {% unless first_item %},{% endunless %}
  {
    "title": "{{ post.title | escape }}",
    "url": "{{ post.url }}",
    "content": "{{ post.content | strip_html | strip_newlines | escape }}",
    "excerpt": "{{ post.excerpt | strip_html | strip_newlines | escape }}",
    "tags": [{% for tag in post.tags %}"{{ tag | escape }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
    "categories": [{% for category in post.categories %}"{{ category | escape }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
    "date": "{{ post.date | date: '%Y-%m-%d' }}"
  }
  {% assign first_item = false %}
{% endfor %}
] 